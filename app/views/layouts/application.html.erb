<!DOCTYPE html>
<html>
<head>
  <title>Bookers11</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav class="nav navbar-nav navbar-left">
      <span>Bookers</span>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        <li class="home"><%= link_to'Home',user_path(current_user.id) %></li>
        <li class="users"><%= link_to'Users','/users' %></li>
        <li class="books"><%= link_to'Books','/books'%></li>
        <li class="logout"><%= link_to'logout',destroy_user_session_path, method: :delete%></li>
        <% else %>
        <li class="home"><%= link_to'home',root_path %></li>
        <li class="about"><%= link_to'About',about_path %></li>
        <li class="sign_up"><%= link_to'Sign up','/users/sign_up' %></li>
        <li class="sign_in"><%= link_to'Login','/users/sign_in' %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>

<%= yield %>
</html>
