<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-lg-3" style="background-color: ;">

<h1>New book</h1>

<%= form_for(@book) do |f| %>
	<p>Title</p>
	<%= f.text_field :title %>
	<p>Opinion</p>
	<%= f.text_area :opinion %>

	<%= f.submit 'Create book' %>

	<% end %>
</div>
<div class="col-lg-9" style="background-color: ;">
<h1>Book</h1>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
		</thead>
		<% @books.each do |book| %>
		<tbody>
			<tr>
				<td> <%= link_to book.title,book_path(book.id) %> </td>
				<td> <%= book.opinion %> </td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
</div>
