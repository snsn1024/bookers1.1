<% if flash[:notice] %>
<p> <%= flash[:notice] %></p>
<% end %>

<body>
	<div class="body">
		<div class="container">
			<div class="row">
				<div class="col-lg-3">
					<h2> User info</h2>
					<table class="table">
						<tbody>
							<tr>
								<th>name</th>
								<th><%= current_user.name %></th>
							</tr>
							<tr>
								<th>introduction</th>
								<th><%= current_user.intro %></th>
							</tr>
						</tbody>
					</table>



					<h2>New book</h2>
					<%= form_for(@book) do |f| %>
					<p>Title</p>
					<%= f.text_field :title %>
					<p>Opinion</p>
					<%= f.text_area :opinion %>
					<br>
					<%= f.submit 'Create book' %>
					<% end %>
				</div>

				<div class="col-lg-9">
					<h2>Book</h2>
					<table class="table">
						<thead>
							<tr>
								<th>Title</th>
								<th>Opinion</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td> </td>
								<td> </td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</body>