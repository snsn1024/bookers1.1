<div class=body>
	<div class=container>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h1>Editing Book</h1>
				<%= form_for(@book) do |f| %>
				<% if @book.errors.any? %>
				<p>error!</p>
				<% end %>
				<p>Title</p>
				<%= f.text_field :title, class: "col-xs-12 book_title" %>
				<p>Opinion</p>
				<%= f.text_area :opinion, class: "col-xs-12 book_body" %>
				<%= f.submit 'Update Book',class: "btn btn-primary col-xs-12" %>
				<% end %>

				<a><%= link_to "Show", book_path(@book.id),class: "book_#{@book.id}" %></a>
				<a><%= link_to "Back", '/books',class: "back" %></a>
			</div>
		</div>
	</div>
</div>s