<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <p>error!</p>
  <% end %>
<p>Title</p>
<%= f.text_field :title, class: "book_title" %>
<p>Opinion</p>
<%= f.text_area :opinion, class: "book_body" %>
<%= f.submit 'Update Book' %>
<% end %>

<a><%= link_to "Show", book_path(@book.id) %></a>
<a class="back"><%= link_to "Back", '/books' %></a>
