<div>
	<% if flash[:notice] %>
	<p> <%= flash[:notice] %></p>
	<% end %>
</div>

<body>
	<div class="body">
		<div class="container">
			<div class="row">
				<div class="col-lg-3">
					<h2> User info</h2>
					<%= attachment_image_tag @user,:profile_image,:fill,60,60,format:'jpeg',fallback:"no_image.jpg",size: '60x60' %>
					<table class="table">
						<tbody>
							<tr>
								<th>name</th>
								<th><%= @user.name %></th>
							</tr>
							<tr>
								<th>introduction</th>
								<th><%= @user.intro %></th>
							</tr>
						</tbody>
					</table>

					<div>
						<%= link_to "setting",edit_user_path(current_user.id),class: "edit_user_#{current_user.id}" %>
					</div>
					
					<h2>New book</h2>
					<%= form_for(@bookn) do |f| %>
					<p>Title</p>
					<%= f.text_field :title, class: "book_title" %>
					<p>Opinion</p>
					<%= f.text_area :opinion, class: "book_body" %>
					<br>
					<%= f.submit 'Create book' %>
					<% end %>
				</div>

				<div class="col-lg-9">
					<h2>Book detail</h2>
					<table class="table">
						<thead>
							<tr>
								<th colspan="1"></th>
								<th>title</th>
								<th>opinion</th>
								<th colspan="2"></th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td></td>
								<td> <%= @book.title %> </td>
								<td> <%= @book.opinion %></td>
								<% if current_user.id == @user.id %>
								<td><%= link_to "Edit", edit_book_path(@book.id),class: "edit_book_#{@book.id}" %></td>
								<td><%= link_to "Destroy", destroy_book_path(@book.id),class: "destroy_book_#{@book.id}",method: :delete, "data-confirm" => "本当に消しますか？" %></td>
								<% end %>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</body>