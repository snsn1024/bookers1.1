<body>
	<div class="body">
		<div class="container">
			<div class="row">
				<div class="col-lg-3">
					<h2> User info</h2>
					<%= attachment_image_tag @user,:profile_image,:fill,60,60 %>
					<table class="table">
						<tbody>
							<tr>
								<th>name</th>
								<th><%= @user.name %></th>
							</tr>
							<tr>
								<th>introduction</th>
								<th><%= @user.intro %></th>
							</tr>
						</tbody>
					</table>
					<div class="row">
						<a class="" href=""></a>
					</div>

					<h2>New book</h2>
				</div>

				<div class="col-lg-9">
					<h2>Books</h2>
					<table class="table">
						<thead>
							<tr>
								<th></th>
								<th>Title</th>
								<th>Opinion</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td>image</td>
								<td> <%= link_to book.title,book_path(book.id) %> </td>
								<td> <%= book.opinion %> </td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</body>