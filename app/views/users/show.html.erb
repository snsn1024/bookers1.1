<body>
	<div class="body">
		<div class="container">
			<div class="row">
				<div class="col-lg-3">
					<h2> User info</h2>
					<table class="table">
						<tbody>
							<tr>
								<th>name</th>
								<th></th>
							</tr>
							<tr>
								<th>introduction</th>
								<th></th>
							</tr>
						</tbody>
					</table>
					<div class="row">
						<a class="" href=""></a>
					</div>

					<h1>New book</h1>
					<%= form_for(@book) do |f| %>
					<p>Title</p>
					<%= f.text_field :title %>
					<p>Opinion</p>
					<%= f.text_area :opinion %>
					<%= f.submit 'Create book' %>
					<% end %>
				</div>

				<div class="col-lg-9">
					<h2>Books</h2>
					<table class="table">
						<thead>
							<tr>
								<th>Title</th>
								<th>Opinion</th>
							</tr>
						</thead>
						<% @books.each do |book| %>
						<tbody>
							<tr>
								<td> <%= link_to book.title,book_path(book.id) %> </td>
								<td> <%= book.opinion %> </td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</body>