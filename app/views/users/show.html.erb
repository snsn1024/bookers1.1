<body>
	<div class="body">
		<div class="container">
			<div class="row">
				<div class="col-lg-3">
					<h2> User info</h2>
					<%= attachment_image_tag @user,:profile_image,:fill,60,60 %>
					<table class="table">
						<tbody>
							<tr>
								<th>name</th>
								<th><%= @user.name %></th>
							</tr>
							<tr>
								<th>introduction</th>
								<th><%= @user.intro %></th>
							</tr>
						</tbody>
					</table>

					<% if @user.id == current_user.id %>
					<p> <%= link_to "setting",edit_user_path(current_user.id) %></p>
					<% end %>

					<h2>New book</h2>
					<%= form_for(@book) do |f| %>
					<p>Title</p>
					<%= f.text_field :title %>
					<p>Opinion</p>
					<%= f.text_area :opinion %>
					<br>
					<%= f.submit 'Create book' %>
					<% end %>
				</div>

				<div class="col-lg-9">
					<h2>Books</h2>
					<table class="table">
						<thead>
							<tr>
								<th colspan="1"></th>
								<th>Title</th>
								<th>Opinion</th>
								<th colspan="2"></th>
							</tr>
						</thead>
						<% @books.each do |book| %>
						<tbody>
							<tr>
								<td colspan="1"></td>
								<td> <%= book.title %> </td>
								<td> <%= book.opinion %> </td>
								<td> <%= link_to"edit", edit_book_path(book.id) %> </td> 
								<td> <%= link_to"destroy", destroy_book_path(book.id) %> </td>
							</tr>
						</tbody>
						<% end %>
					</table>
				</div>
			</div>
		</div>
	</div>
</body>